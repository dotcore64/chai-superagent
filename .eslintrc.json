{
  "extends": ["airbnb-base", "plugin:node/recommended"],
  "plugins": ["node"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_obj"] }],
    "import/extensions": 0
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "extends": ["plugin:mocha/recommended"],
      "plugins": ["mocha"],
      "env": {
        "mocha": true
      },
      "rules": {
        "mocha/no-mocha-arrows": 0,
        "node/no-unsupported-features/es-syntax": 0
      }
    }
  ]
}
